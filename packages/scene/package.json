{
  "name": "@worldline-kinematics/scene",
  "version": "0.1.0",
  "description": "React Three Fiber components for solar system and worldline visualization",
  "keywords": [
    "react",
    "three-js",
    "react-three-fiber",
    "r3f",
    "solar-system",
    "3d-visualization",
    "planets",
    "webgl"
  ],
  "homepage": "https://github.com/computationalcore/worldline-kinematics#readme",
  "repository": {
    "type": "git",
    "url": "https://github.com/computationalcore/worldline-kinematics.git",
    "directory": "packages/scene"
  },
  "bugs": {
    "url": "https://github.com/computationalcore/worldline-kinematics/issues"
  },
  "author": "Vin Busquet <computationalcore@gmail.com>",
  "license": "MIT",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup src/index.ts --format esm --dts --clean --external react",
    "dev": "tsup src/index.ts --format esm --dts --watch --external react",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:ui": "vitest --ui"
  },
  "dependencies": {
    "@react-three/drei": "^10.0.0",
    "@react-three/fiber": "^9.0.0",
    "@react-three/postprocessing": "^3.0.0",
    "@worldline-kinematics/astro": "workspace:*",
    "@worldline-kinematics/core": "workspace:*",
    "three": "^0.170.0"
  },
  "peerDependencies": {
    "react": "^19.0.0",
    "react-dom": "^19.0.0"
  },
  "devDependencies": {
    "@react-three/test-renderer": "^9.1.0",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.2",
    "@types/node": "^22.10.0",
    "@types/react": "^19.0.0",
    "@types/three": "^0.170.0",
    "jsdom": "^27.4.0",
    "react": "^19.0.0",
    "tsup": "^8.3.5",
    "typescript": "^5.6.3",
    "vitest": "^4.0.18"
  },
  "sideEffects": false
}
