# Application Configuration
# Copy this file to .env.local and update values as needed

# App Identity (displayed in UI)
NEXT_PUBLIC_APP_NAME="Spacetime Journey"

# App URL (for SEO/social sharing)
NEXT_PUBLIC_APP_URL="https://www.spacetimejourney.com"

# localStorage key prefix
NEXT_PUBLIC_STORAGE_PREFIX="spacetime-journey"

# GitHub repository URL
NEXT_PUBLIC_GITHUB_URL="https://github.com/computationalcore/worldline-kinematics"

# Debug mode - shows diagnostic overlays (subsolar longitude, rotation angles, etc.)
# Set to "true" to enable debug displays
NEXT_PUBLIC_DEBUG=false
